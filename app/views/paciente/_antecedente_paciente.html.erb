<h3>Antecedentes clinicos del paciente</h3>
<% @paciente.antecedente_paciente.each do |a|%>
	<li>
		<%= a.antecedente_medicos.nombre%>
		<% if a.antecedente_medicos.tipo%>
			<br />
			<%=a.antecedente_medicos.descripcion%>: <%=a.comentario%>
		<% end%>
		<br />
	</li>
<% end%>
<% if @medicoC%>
	<br />
	<%= form_tag({controller: "cita_medica", action: "efectuar", cita: params[:cita], cambio_i: true}, remote: true, method: "post") do %>
		<%= submit_tag "Actualizar antecedentes", disabled: false, disable_with: "Por favor espere..."%>
	<% end%>
<% end%>
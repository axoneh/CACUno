<% if @especifico%>
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title">Datos del paciente</h3>
		</div>
		<div class="panel-body">
			<%= image_tag(@paciente.avatar.url(:medium), class: "img-rounded")%>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Nombre</p></strong>
				</div>
				<div class="col-md-8">
					<%= @paciente.nombre%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Apellido</p></strong>
				</div>
				<div class="col-md-8">
					<%= @paciente.apellido%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Documento de identidad</p></strong>
				</div>
				<div class="col-md-8">
					<%= @paciente.identificacion%>, <%= @paciente.tipo_documentos.nombre%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Direccion</p></strong>
				</div>
				<div class="col-md-8">
					<%= @paciente.direccion%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Correo</p></strong>
				</div>
				<div class="col-md-8">
					<%= @paciente.correo%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Estado civil</p></strong>
				</div>
				<div class="col-md-8">
					<%= @paciente.estado_civils.nombre%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Genero</p></strong>
				</div>
				<div class="col-md-8">
					<%= @genero%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Fecha de nacimiento</p></strong>
				</div>
				<div class="col-md-8">
					<%= @paciente.fecha_nacimiento%> (<%= @edad%> a√±os)
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Patologia</p></strong>
				</div>
				<div class="col-md-8">
					<%= @paciente.patologia.nombre%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Descripcion patologica</p></strong>
				</div>
				<div class="col-md-8">
					<%=@paciente.patologia.descripcion%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Ultimo INR de tratamiento</p></strong>
				</div>
				<div class="col-md-8">
					<%= (@inr.valorInr) if @inr%> tomado el <%= (@inr.fecha) if @inr%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Promedio INR</p></strong>
				</div>
				<div class="col-md-8">
					<%= @promedioINR%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Porcentaje INR</p></strong>
				</div>
				<div class="col-md-8">
					<%= @porcentajeINR%> %
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Porcentaje de riesgo de hemorragia</p></strong>
				</div>
				<div class="col-md-8">
					<%= @riesgoHemorragia%> %
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Porcentaje de riesgo de embolia</p></strong>
				</div>
				<div class="col-md-8">
					<%= @riesgoEmbolia%> %
				</div>
			</div>
		</div>
	</div>
	<%= render 'antecedente_paciente'%>
	<%= render 'vista_inr'%>
	<%= render 'vista_laboratorios'%>
	<% if @prescripcion%>
		<h2>Ultima prescripcion</h2>
		<br />
		Fecha de creacion: <%= @prescripcion.created_at%>
		<br />
		Fecha de vencimiento: <%= @prescripcion.fechaFin%>
		<br />
		Anticoagulante: <%= @prescripcion.anticoagulantes.nombre%>
		<br />
		Prescripcion diaria
		<br />
		<% @prescripcion.prescripcion_diaria.each do |d|%>
			<li>
				Dia <%= d.dia_asociados.nombre%> - cantidad <%= d.cantidadGramos%> gramos.
			</li>
		<% end%>
	<% end%>
	<br />
	<h2>Citas medicas del paciente</h2>
	<% @citasMedicas.each do |t| %>
		Fecha: <%= t.fecha %> - Tipo: <%= t.tipo%>
		<br />
		INR: 
		<% if t.inr_pacientes.where(["fecha = ? and cita_medicas_id = ?",t.fecha,t.id]).first %>
			<%= t.inr_pacientes.where(["fecha = ? and cita_medicas_id = ?",t.fecha,t.id]).first.valorInr%>
		<% else%>
			(Sin encontrar)
		<% end%>
		<br />
		<%= link_to "Ver cita", controller: "cita_medica", action: "visualizar", cita: t.id%>
		<br />
	<% end%>
	<% if @medico or @paramedico%>
		<br />
		<% if @prescripcion and (Date.current < @prescripcion.fechaFin.to_date)%>
			Es recomendable no hacer la consulta ahora.
			<br />
		<% end%>
		<%= link_to "Nueva consulta", controller: "cita_medica", action: "efectuar", paciente: @paciente.correo%>
	<% end%>
	<% if @medico or @admin%>
		<br />
		<%= link_to "Modificar paciente", controller: "paciente", action: "actualizar", paciente: @paciente.correo%>
	<% end%>
	<% if @medico%>
		<br />
		<%= link_to "Agregar inr's", controller: "paciente", action: "agregar_inr", paciente: @paciente.correo%>
	<% end%>
<%else%>
	<%= form_tag({controller: "paciente", action: "visualizar"},  remote: true , method: "get") do%>
		<%= text_field_tag "busqueda", "", size: 20, placeholder: "Nombre de paciente"%>
		<%= submit_tag "buscar", disabled: false, disable_with: "Por favor espere..."%>
	<% end%>
	<br />
	<% if @medico or @admin%>
		<%= link_to "Agregar paciente", controller: "paciente", action: "agregar"%>
		<br />
	<% end%>
	<br />
	<div id="pacientes">
		<%= render 'vista_pacientes'%>
	</div>
<%end%>
<br />

			<% if t.tipo%>
				<br />
				<%= t.descripcion%>
				<%= text_area_tag t.id.to_s+"_comentario"%>
			<% end%>
		<% end%>
		<br />
		<%= text_field_tag "inr", "" , size: 30, maxlenght: 30, placeholder: "INR del paciente", required:"required"%>
		<br />
		<%= submit_tag "Enviar para respuesta", disabled: false, disable_with: "Por favor espere..."%>
	<% end%>
<% end%>

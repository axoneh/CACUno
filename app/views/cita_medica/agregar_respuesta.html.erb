<h2>Agregar respuesta</h2>
<%= form_tag({controller: "cita_medica", action: "agregar_respuesta", cita: params[:cita]} , method: "post") do %>
	<br />
	<div>
		<h3>Respuesta Medica</h3>
		<br />Analisis
		<br />
		<%= text_area_tag "analisis"%>
		<br />
		<br />Plan
		<br />
		<%= text_area_tag "plan"%>
		<br />
		<br />Observacion Subjetiva
		<br />
		<%= text_area_tag "subjetiva"%>
		<br />
		<br />Observacion Objetiva
		<br />
		<%= text_area_tag "objetiva"%>
		<br />
		<%= check_box_tag "indefinido"%> Â¿Tratamiento indefinido?
		<br />
		De no ser indefinido: <%= text_field_tag "semanas_t", "" , size: 30, maxlenght: 30, placeholder: "Semanas de tratamiento"%>
	</div>
	<div>
		<h3>Preinscripcion</h3>
		<br />
		Anticoagulante: <%= select_tag "antic", options_from_collection_for_select(@anticoagulantes, :id,:nombre)%>
		<br />
		Fecha limite del tratamiento: 
		<%= date_field_tag "fecha_fin", nil, required:"required"%>
		<br />
		Dosis diaria
		<br />
		<% @diasAsociados.each do |t|%>
			<%= check_box_tag t.id.to_s+"_d", t.id.to_s+"_t"%> <%= t.nombre%>
			<%= text_field_tag t.id.to_s+"_cantidad", "" , size: 5, maxlenght: 5, placeholder: "Cantidad en gramos"%>
			<br />
		<% end%>
	</div>
	<br />
	<%= submit_tag "Guardar datos", disabled: false, disable_with: "Por favor espere..."%>
	<br />
<% end%>

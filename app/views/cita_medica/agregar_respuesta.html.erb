<%= render 'datos_paciente'%>
<%= render 'ver_preguntas'%>
	<div class="panel-default">
		<div class="panel-body">
		<%= form_tag({controller: "cita_medica", action: "agregar_respuesta", cita: params[:cita]}, id: "agregar_respuesta" , method: "get", onsubmit: "return validacionRespuesta()") do %>
			<% if @preguntaInr%>
				<div class="form-group">
					<div class="input-group">
						<span class="input-group-addon">
							<%= check_box_tag @preguntaInr.id.to_s+"_p", nil, params[@preguntaInr.id.to_s+"_p"].present?%>
						</span>
						<%= text_field_tag "texto", 'Â¿Tiene el paciente inr dificil en este punto?', readonly: "readonly", class: "form-control"%>
					</div>
				</div>
			<% end%>
			<%= render 'respuesta'%>
		<% end%>
		<div id="ver_icd">
			<%= render 'ver_icd'%>
		</div>
		<div id="buscar_icd">

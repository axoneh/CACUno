<h2>Agregar respuesta</h2>
<%= form_tag({controller: "cita_medica", action: "agregar_respuesta", cita: params[:cita]} , method: "post") do %>
	<br />
	<div>
		<% if @preguntas%>
			<h3>Encuesta medica</h3>
			<% @preguntas.each do |t|%>
				<br />
				<%= t.pregunta%>
				<% if t.tipo%>
					<br />
					<%= t.descripcion%>: <%= t. comentario%>
				<% end%>
			<% end%>
		<% end%>
		<br />
		Valor INR: <%= @inr.valorInr%>
		<br />
		Anticoagulante usado: <%= @inr.anticoagulantes.nombre%>
	</div>
	<div>
		<h3>Respuesta Medica</h3>
		Analisis
		<br />
		<%= text_area_tag "analisis", @valorAnalisis%>
		<br />
		<br />
		Plan
		<br />
		<%= text_area_tag "plan", @valorPlan%>
		<br />
		<% if @preguntaInr%>
			<%= check_box_tag @preguntaInr.id.to_s+"_p", @preguntaInr.id.to_s+"_p"%> Â¿Tiene el paciente inr dificil en este punto?
			<br />
		<% end%>
	</div>
	<div>
		<h3>Preinscripcion</h3>
		<br />
		Anticoagulante: <%= select_tag "antic", options_from_collection_for_select(@anticoagulantes, :id,:nombre)%>
		<br />
		Fecha limite de este tratamiento: 
		<%= date_field_tag "fecha_fin", @valorFechaFin, required:"required"%>
		<br />
		Dosis diaria
		<br />
		<% @diasAsociados.each do |t|%>
			<%= check_box_tag t.id.to_s+"_d", t.id.to_s+"_d"%> <%= t.nombre%>
			<%= text_field_tag t.id.to_s+"_cantidad", "" , size: 15, maxlenght: 5, placeholder: "Cantidad en gramos"%>
			<br />
		<% end%>
	</div>
	<br />
	<%= submit_tag "Enviar respuesta", disabled: false, disable_with: "Por favor espere..."%>
	<br />
<% end%>
<br />
<%= @mensaje%>
<br />
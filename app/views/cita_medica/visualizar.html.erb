<h1>Citas</h1>
<% if @nivel==3%>
	<h3>Cita especifica</h3>
	<br />
	Fecha: <%= @fechaCita%>
	<br />
	Hora: <%= @horaCita%>
	<br />
	Paciente: <%= @paciente%>
	<br />
	INR: <%= @inr%>
	<div>
		<h3>Respuesta medica</h3>
		<% if @analisis%>
			<br />
			Analisis: <%= @analisis%> 
		<% end%>
		<% if @plan%>
			<br />
			Plan: <%= @plan%> 
		<% end%>
		<% if @subjetivo%>
			<br />
			Observacion subjetiva: <%= @subjetivo%> 
		<% end%>
		<% if @objetivo%>
			<br />
			Observacion objetiva: <%= @objetivo%> 
		<% end%>
		<% if @prescripcionDiaria%>
			<h4>Prescripcion diaria</h4>
			<% if @fechafin%>
				Vencimiento de la prescripcion: <%= @fechafin%> 
			<% end%>
			<% if @antic%>
				<br />
				Anticoagulante medicado: <%= @antic%> 
			<% end%>
			<br />
			<br />
			<% @prescripcionDiaria.each do |t|%>
				<li>
					Dia: <%=t.dia%>, cantidad: <%=t.cantidad%> gramos
				</li>
			<% end%>
		<% end%>
	</div>
<% elsif @nivel==2%>
	<h3>Cita por paciente</h3>
	<br />
	<% @citasRegistradas.each do |t|%>
		<br />
		Fecha: <%= t.fecha%>
		<br />
		Hora: <%= t.hora%>
		<br />
		Paciente: <%= t.paciente%>
		<br />
		INR: <%= t.inr%>
		<br />
		<%= link_to "Ver Cita" , controller: "cita_medica", action: "visualizar", cita: t.id%>
	<% end%>
<% elsif @nivel==1%>
	<h3>Cita registradas</h3>
	<br />
	<% @citasRegistradas.each do |t|%>
		<br />
		Fecha: <%= t.fecha%>
		<br />
		Hora: <%= t.hora%>
		<br />
		Paciente: <%= t.paciente%>
		<br />
		INR: <%= t.inr%>
		<br />
		<%= link_to "Ver Cita" , controller: "cita_medica", action: "visualizar", cita: t.id%>
	<% end%>
<% end%>

<div id="observacion" class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">Observacion</h3>
	</div>
	<div class="panel-body">
		<div class="form-group">
			<%= label_tag "Observacion Subjetiva"%>
			<%= text_area_tag "subjetiva", @valorSubjetiva, placeholder: "Observacion subjetiva", rows: 3, class: "form-control", required: "required"%>
		</div>
		<div class="form-group">
			<%= label_tag "Observacion Objetiva"%>
			<%= text_area_tag "objetiva", @valorObjetiva, placeholder: "Observacion Objetiva", rows: 3, class: "form-control", required: "required"%>
		</div>
		<div class="form-group">
			<%= label_tag "Tratamiento temporal"%>
			<div class="input-group">
				<span class="input-group-addon">
	        		<%= check_box_tag "temporal", "temporal"%>
	      		</span>
				<%= text_field_tag "semanas_t", "" , size: 30, maxlenght: 30, placeholder: "Semanas de tratamiento", class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= label_tag "Frecuencia Cardiaca"%>
			<%= text_field_tag "frecuencia_car", "", size: 20, maxlenght: 15, placeholder: "Frecuencia cardiaca", required: "required", class: "form-control" %>
		</div>
		<div class="form-group">
			<%= label_tag "Hipertension sistolica"%>
			<%= text_field_tag "hsis", "", size: 20, maxlenght: 15 , placeholder: "Hipertension sistolica", required: "required", class: "form-control"%>
		</div>
		<div class="form-group">
			<%= label_tag "Hipertension diastolica"%>
			<%= text_field_tag "hdia", "", size: 20, maxlenght: 15, placeholder: "Hipertension diastolica", required: "required", class: "form-control"%>
		</div>
	</div>
</div>
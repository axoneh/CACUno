<div id="respuesta">
	<h3>Respuesta Medica</h3>
	<br />Analisis
	<br />
	<%= text_area_tag "analisis", @valorAnalisis%>
	<br />
	<br />Plan
	<br />
	<%= text_area_tag "plan", @valorPlan%>
	<br />
	<br />Valor minimo de anticoagulacion: 
	<%= text_field_tag "valor_min", @valorMin, size: 5, maxlenght: 4, required: "required"%>
	<br />
	<br />Valor maximo de anticoagulacion
	<%= text_field_tag "valor_max", @valorMax, size: 4, maxlenght: 4, required: "required"%>
</div>
<div id="prescripcion">
	<h3>Preinscripcion</h3>
	<br />
	Anticoagulante: <%= select_tag "antic", options_from_collection_for_select(@anticoagulantes, :id,:nombre)%>
	<br />
	Dias de tratamiento: 
	<%= text_field_tag "fecha_fin", @valorFechaFin%>
	<br />
	Dosis diaria
	<br />
	<% @diasAsociados.each do |t|%>
		<div id=<%= t.nombre%>>
			<%= t.nombre%>
			<br />
			<%= radio_button_tag t.id.to_s+"_cantidad", "0"%> Ninguna medida
			<br />
			<%= radio_button_tag t.id.to_s+"_cantidad", "5"%> Media pastilla
			<br />
			<%= radio_button_tag t.id.to_s+"_cantidad", "10"%> Pastilla completa
			<br />
		</div>
	<% end%>
	<br />
	Recomendaciones de tratamiento:
	<br />
	<%= text_area_tag "recomendacion", @valorRecomendacion%>
</div>
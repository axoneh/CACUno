<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">Respuesta Medica</h3>
	</div>
	<div class="panel-body">
		<div class="form-group" id="divAnalisis">
			<%= label_tag "Analisis"%>
			<%= text_area_tag "analisis", @valorAnalisis, placeholder: "Analisis", rows: 3, class: "form-control"%>
		</div>
		<div class="form-group" id="divPlan">
			<%= label_tag "Plan"%>
			<%= text_area_tag "plan", @valorPlan, placeholder: "Plan", rows: 3, class: "form-control"%>
		</div>
		<div class="form-group" id="divRangoMin">
			<%= label_tag "Valor minimo de inr saludable"%>
			<%= text_field_tag "valor_min", @valorMin, maxlenght: 4, class: "form-control", onkeypress: "return isNumber(event)"%>
		</div>
		<div class="form-group" id="divRangoMax">
			<%= label_tag "Valor maximo de inr saludable"%>
			<%= text_field_tag "valor_max", @valorMax, maxlenght: 4, class: "form-control", onkeypress: "return isNumber(event)"%>
		</div>
	</div>
</div>
<div id="prescripcion" class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">Prescripcion medica</h3>
	</div>
	<div class="panel-body">
		<div class="form-group" id="divAnticoagulante">
			<%= label_tag "Anticoagulante"%>
			<%= select_tag "antic", options_from_collection_for_select(@anticoagulantes, :id,:nombre), class: "form-control"%>
		</div>
		<div class="form-group" id="divDiasTratamiento">
			<%= label_tag "Dias de tratamiento"%>
			<%= text_field_tag "fecha_fin", @valorFechaFin, placeholder: "Dias de tratamiento", class: "form-control", onkeypress: "return isNumber(event)"%>
		</div>
		<% @diasAsociados.each do |t|%>
			<div id=<%= t.nombre%>, class="form-group">
				<%= label_tag t.nombre%>
				<div class="radio">
					<label>
						<%= radio_button_tag t.id.to_s, "0"%> Ninguna medida
					</label>
				</div>
				<div class="radio">
					<label>
						<%= radio_button_tag t.id.to_s, "5.0"%> Media pastilla
					</label>
				</div>
				<div class="radio">
					<label>
						<%= radio_button_tag t.id.to_s, "1"%> Pastilla completa
					</label>
				</div>
			</div>
		<% end%>
		<div class="form-group" id="divRecomendacion">
			<%= label_tag "Recomendaciones para la prescripcion"%>
			<%= text_area_tag "recomendacion", @valorRecomendacion, placeholder: "Recomendaciones para la prescripcion", rows: 3, class: "form-control"%>
		</div>
	</div>
</div>
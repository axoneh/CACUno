<div id="preguntas" class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">Preguntas</h3>
	</div>
	<div class="panel-body">
		<% @preguntas.each do |t|%>
			<div class="form-group">
				<div class="input-group">
					<span class="input-group-addon">
						<%= check_box_tag t.id.to_s, t.id.to_s, onclick: "preguntaDescripcion('"+t.id.to_s+"')"%>
					</span>
					<%= text_field_tag "texto", 'Â¿'+t.pregunta.upcase+'?', readonly: "readonly", class: "form-control"%>
				</div>
				<div id=<%= "c_"+t.id.to_s%>>
				</div>
			</div>
		<% end%>
		<div class="form-group" id="divInrCita">
			<%= label_tag "INR actual del paciente"%>
			<%= text_field_tag "inr", @valorInr , maxlenght: 4, placeholder: "INR del paciente", class: "form-control", onkeypress: "return isNumber(event)"%>
		</div>
	</div>
</div>
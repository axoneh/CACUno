<div id="preguntas" class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">Preguntas</h3>
	</div>
	<div class="panel-body">
		<% @preguntas.each do |t|%>
			<div class="form-group">
				<div class="input-group">
					<span class="input-group-addon">
						<%= check_box_tag t.id.to_s, t.id.to_s, params[t.id.to_s].present?, onclick: "habilitarDescripcionPregunta('"+t.id.to_s+"')"%>
					</span>
					<%= text_field_tag "texto", 'Â¿'+t.pregunta+'?', readonly: "readonly", class: "form-control"%>
				</div>
				<% if t.tipo%>
					<%= area_text_tag t.id.to_s+"_comentario", nil, rows: 3, class: "form-control", readonly: "readonly", placeholder: t.descripcion.upcase%>
				<% end%>
			</div>
		<% end%>
		<div class="form-group" id="divInrCita">
			<%= label_tag "INR actual del paciente",nil, class: "control-label"%>
			<%= text_field_tag "inr", params[:inr] , maxlenght: 4, placeholder: "INR del paciente", class: "form-control", onkeypress: "return isNumber(event)"%>
		</div>
	</div>
</div>
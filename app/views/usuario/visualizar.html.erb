<%if @especifico%>
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title">Datos del paciente</h3>
		</div>
		<div class="panel-body">
			<% if @usuario.link_foto%>
				<center><%= image_tag(@usuario.link_foto,size: "400x400", class: "img-rounded")%></center>
				<br />
			<% else%>
				Sin foto definida
			<% end%>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Nombre</p></strong>
				</div>
				<div class="col-md-8">
					<%= @usuario.nombre%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Apellido</p></strong>
				</div>
				<div class="col-md-8">
					<%= @usuario.apellido%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Documento de identidad</p></strong>
				</div>
				<div class="col-md-8">
					<%= @usuario.identificacion+", "+@usuario.tipo_documentos.nombre%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Direccion</p></strong>
				</div>
				<div class="col-md-8">
					<%= @usuario.direccion%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Correo</p></strong>
				</div>
				<div class="col-md-8">
					<%= @usuario.email%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Genero</p></strong>
				</div>
				<div class="col-md-8">
					<%= @genero%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Cargo</p></strong>
				</div>
				<div class="col-md-8">
					<%= @usuario.rols.nombre%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Especialidad</p></strong>
				</div>
				<div class="col-md-8">
					<%= @usuario.especialidad%>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<strong><p class="text-right">Fecha de nacimiento</p></strong>
				</div>
				<div class="col-md-8">
					<%= @usuario.fecha_nacimiento%>
				</div>
			</div>
		</div>
	</div>
	<center>
		<div class="btn-group btn-group-lg" role="group">
			<%= link_to "Usuarios",{controller: "usuario", action: "visualizar"}, class: "btn btn-default"%>
			<% if (current_cuenta_usuario.id==@usuario.id)%>
				<%= link_to "Modificar",{controller: "usuario", action: "actualizar"}, class: "btn btn-primary"%>
			<% end%>
			<% if @admin%>
				<% if @usuario.estado==3%>
					<%= link_to "Autorizar", {controller: "usuario", action: "autorizar", usuario: @usuario.email}, class: "btn btn-primary"%>
				<% elsif (current_cuenta_usuario.id==@usuario.id) or (@usuario.estado==2) or (@usuario.rols.nombre!="Administrador")%>
					<%= link_to "Reautorizar",{controller: "usuario", action: "cambiar", usuario: @usuario.id}, class: "btn btn-success"%>
					<%= link_to "Desautorizar",{controller: "usuario", action: "desactivar", usuario: @usuario.email}, class: "btn btn-danger"%>
				<%end %>
			<% end%>
		</div>
	</center>
<% else%>
	<%= form_tag({controller: "usuario", action: "visualizar"},  remote: true , method: "get") do%>
		<%= text_field_tag "busqueda", "", size: 20, placeholder: "Nombre del usuario"%>
		<%= submit_tag "buscar", disabled: false, disable_with: "Por favor espere..."%>
	<% end%>
	<% if @admin%>
		<%= link_to "Autorizar nuevo usuario", controller: "usuario", action: "autorizar"%>
	<% end%>
	<div id="usuarios">
		<%= render 'vista_usuarios'%>
	</div>
<%end%>
